<Window x:Class="MIDI.UI.Views.MidiInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MIDI.UI.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MidiInfoWindowViewModel}"
        Title="MIDIファイル情報" Height="600" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    <Grid Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="ファイル情報" FontWeight="Bold">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="パス:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileInfo.FilePath}" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="サイズ:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileSize}" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="MIDI情報" FontWeight="Bold" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="フォーマット:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FormatDescription}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="トラック数:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileInfo.TrackCount}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="分解能:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FileInfo.Division}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="推定複雑度:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ComplexityDescription}" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="推奨設定" FontWeight="Bold" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="サンプルレート:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileInfo.RecommendedSettings.SampleRate, StringFormat={}{0} Hz}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="最大同時発音数:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileInfo.RecommendedSettings.MaxPolyphony}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="バッファサイズ:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FileInfo.RecommendedSettings.BufferSize}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="エフェクト:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RecommendedEffects}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="並列処理:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding RecommendedParallel}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="SoundFont:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding RecommendedSoundFont}" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="プラグイン設定" FontWeight="Bold" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="設定ファイル:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConfigurationStatus}" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="SoundFontサポート:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SoundFontSupport}" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>