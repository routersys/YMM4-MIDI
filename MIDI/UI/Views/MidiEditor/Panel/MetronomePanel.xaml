<UserControl x:Class="MIDI.UI.Views.MidiEditor.Panel.MetronomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIDI.UI.Views.MidiEditor.Panel"
             xmlns:converters="clr-namespace:MIDI.UI.Views.MidiEditor.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:HalfDurationConverter x:Key="halfDurationConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CheckBox IsChecked="{Binding IsEnabled}" Content="メトロノームを有効にする" Margin="10,10,10,0" Focusable="False"/>
        <CheckBox IsChecked="{Binding AutoTempoChange}" Content="再生位置に応じてBPMを自動変更" Margin="10,5,10,10" Grid.Row="1" Focusable="False"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" Stretch="Uniform" Margin="10,0,10,0">
                <Grid Width="200" Height="300">
                    <Grid.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.4" BlurRadius="5"/>
                    </Grid.Effect>
                    <Path Fill="#8B4513" Stroke="Black" StrokeThickness="1">
                        <Path.Data>
                            <PathGeometry>
                                <PathFigure StartPoint="50,280">
                                    <LineSegment Point="150,280"/>
                                    <LineSegment Point="180,20"/>
                                    <LineSegment Point="20,20"/>
                                </PathFigure>
                            </PathGeometry>
                        </Path.Data>
                    </Path>

                    <ItemsControl ItemsSource="{Binding Source={StaticResource {x:Static SystemColors.ControlTextBrushKey}}}" Canvas.Left="75" Canvas.Top="50">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="40" FontSize="8" Canvas.Left="80" Canvas.Top="225" Foreground="White" />
                                    <TextBlock Text="120" FontSize="8" Canvas.Left="80" Canvas.Top="145" Foreground="White" />
                                    <TextBlock Text="200" FontSize="8" Canvas.Left="80" Canvas.Top="65" Foreground="White" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Rectangle Width="120" Height="20" Fill="#A0522D" Margin="0,260,0,0"/>

                    <Grid x:Name="Pendulum" RenderTransformOrigin="0.5,0.9" VerticalAlignment="Top" Margin="0,60,0,0">
                        <Grid.RenderTransform>
                            <RotateTransform x:Name="PendulumRotation" Angle="0"/>
                        </Grid.RenderTransform>

                        <Rectangle Width="4" Height="200" Fill="Gold" VerticalAlignment="Top"/>
                        <Rectangle x:Name="PendulumWeight" Width="20" Height="15" Fill="Goldenrod" Cursor="SizeNS"
                                   VerticalAlignment="Top" Margin="90,0,90,0"
                                   MouseLeftButtonDown="PendulumWeight_MouseLeftButtonDown"
                                   MouseMove="PendulumWeight_MouseMove"
                                   MouseLeftButtonUp="PendulumWeight_MouseLeftButtonUp">
                            <Rectangle.RenderTransform>
                                <TranslateTransform Y="{Binding WeightPosition}"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Grid>

                    <Grid VerticalAlignment="Top" Margin="0,30,0,0">
                        <TextBlock x:Name="BPM_TextBlock" Text="{Binding Tempo, StringFormat={}{0:F0} BPM}" HorizontalAlignment="Center" 
                                   Foreground="White" FontSize="16" MouseLeftButtonDown="BPM_TextBlock_MouseLeftButtonDown">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTempoInEditMode}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="BPM_TextBox" Text="{Binding Tempo, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F0}}" 
                                 HorizontalAlignment="Center" Foreground="White" FontSize="16" Background="Transparent" BorderThickness="0"
                                 Width="60" HorizontalContentAlignment="Center"
                                 LostFocus="BPM_TextBox_LostFocus" KeyDown="BPM_TextBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTempoInEditMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Grid>
            </Viewbox>
            <Slider Grid.Row="1" Value="{Binding Tempo, Mode=TwoWay}" Minimum="10" Maximum="380" Margin="10,0,10,10"
                    IsSnapToTickEnabled="True" TickFrequency="1" Visibility="Collapsed" IsEnabled="{Binding AutoTempoChange, Converter={StaticResource InverseBooleanConverter}}"/>
        </Grid>

        <StackPanel Grid.Row="3" Margin="10">
            <TextBlock Text="音量"/>
            <Slider Value="{Binding Volume}" Minimum="0" Maximum="1" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
        </StackPanel>
    </Grid>
</UserControl>