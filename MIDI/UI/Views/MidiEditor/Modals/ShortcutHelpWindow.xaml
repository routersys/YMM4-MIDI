<Window x:Class="MIDI.UI.Views.MidiEditor.Modals.ShortcutHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.UI.ViewModels.MidiEditor.Modals"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ShortcutHelpViewModel}"
        Title="ショートカットキー ヘルプ"
        Width="600" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        Topmost="True"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ShortcutCategories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <GroupBox Header="{Binding CategoryName}" FontWeight="Bold" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding Shortcuts}" BorderThickness="0" Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Path Data="{Binding IconPath}" Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border Grid.Column="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" CornerRadius="3" Padding="5,3" Margin="5,0" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
                                                <TextBlock Text="{Binding Key}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="2" Text="{Binding Description}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>