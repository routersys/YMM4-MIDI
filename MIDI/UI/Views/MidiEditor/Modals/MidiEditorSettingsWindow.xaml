<Window x:Class="MIDI.UI.Views.MidiEditor.Modals.MidiEditorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.UI.ViewModels.MidiEditor.Settings"
        xmlns:conv="clr-namespace:MIDI.UI.Views.MidiEditor.Converters"
        mc:Ignorable="d"
        Title="MIDIエディター設定" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:ColorToStringConverter x:Key="ColorToStringConverter"/>
            <conv:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />

            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="5,0"/>
            </Style>

            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="32"/>
            </Style>

            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <DataTemplate DataType="{x:Type local:BoolSettingViewModel}">
                <CheckBox IsChecked="{Binding Value}" Content="{Binding Name}" ToolTip="{Binding Description}"/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:StringSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:IntSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:DoubleSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:ColorSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding Value, Converter={StaticResource ColorToStringConverter}, UpdateSourceTrigger=LostFocus}"
                             PreviewKeyDown="ColorTextBox_PreviewKeyDown" TextChanged="ColorTextBox_TextChanged"/>
                    <Border Grid.Column="2" Width="32" Height="32" Margin="5,0,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1">
                        <Rectangle>
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding Value}"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:EnumSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding EnumValues}" SelectedItem="{Binding Value}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type local:ComboBoxSettingViewModel}">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding Options}" SelectedItem="{Binding Value}"/>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1">
            <TreeView ItemsSource="{Binding MajorGroups}" SelectedItemChanged="TreeView_OnSelectedItemChanged" Background="Transparent" BorderThickness="0">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Groups}">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="2"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <HierarchicalDataTemplate DataType="{x:Type local:MajorSettingGroupViewModel}" ItemsSource="{Binding Groups}">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="2" />
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type local:SettingGroupViewModel}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{Binding IconPath}" Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Border>

        <Border Grid.Column="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SelectedGroup.Settings}" Margin="10"/>
                </ScrollViewer>
                <Button Grid.Row="1" Content="このカテゴリの設定をリセット" Command="{Binding ResetSettingGroupCommand}" CommandParameter="{Binding SelectedGroup}"
                        Style="{StaticResource RichButtonStyle}" HorizontalAlignment="Right" Margin="10"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="キャンセル" IsCancel="True" Click="CancelButton_Click" Style="{StaticResource RichButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="適用" Click="ApplyButton_Click" Style="{StaticResource RichButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" Style="{StaticResource RichButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>