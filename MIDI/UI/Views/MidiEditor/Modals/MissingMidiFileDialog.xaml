<Window x:Class="MIDI.UI.Views.MidiEditor.Modals.MissingMidiFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.UI.ViewModels.MidiEditor.Modals"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MissingMidiFileViewModel}"
        Title="MIDIファイルが見つかりません"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        ResizeMode="NoResize"
        Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="プロジェクトに関連付けられたMIDIファイルが見つかりませんでした。" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <GroupBox Grid.Row="1" Header="元のパス" Margin="0,0,0,10">
            <TextBox Text="{Binding OriginalPath}" IsReadOnly="True" TextWrapping="Wrap" Margin="5"/>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="新しいパス" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding NewPath, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Margin="5"/>
                <Button Grid.Column="1" Content="参照..." Command="{Binding BrowseCommand}" Style="{StaticResource RichButtonStyle}" Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="キャンセル" IsCancel="True" Style="{StaticResource RichButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="OK" Command="{Binding OkCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" IsDefault="True" Style="{StaticResource RichButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>