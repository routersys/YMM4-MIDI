<Window x:Class="MIDI.UI.Views.MidiEditor.Modals.TransposeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.UI.ViewModels.MidiEditor.Modals"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:TransposeViewModel, IsDesignTimeCreatable=True}"
        Title="移調" Width="300" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        ResizeMode="NoResize" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="半音:" VerticalAlignment="Center"/>
        <Slider Grid.Row="0" Grid.Column="1" Value="{Binding Semitones}" Minimum="-24" Maximum="24" IsSnapToTickEnabled="True" TickFrequency="1" Margin="5"/>
        <Grid Grid.Row="0" Grid.Column="2" MinWidth="35">
            <TextBlock Text="{Binding Semitones}" VerticalAlignment="Center" HorizontalAlignment="Right" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" ToolTip="ダブルクリックして編集"/>
            <TextBox Text="{Binding Semitones, UpdateSourceTrigger=Explicit}" Visibility="Collapsed" LostFocus="TextBox_LostFocus" KeyDown="TextBox_KeyDown" MinWidth="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        </Grid>

        <Label Grid.Row="1" Grid.Column="0" Content="オクターブ:" VerticalAlignment="Center"/>
        <Slider Grid.Row="1" Grid.Column="1" Value="{Binding Octaves}" Minimum="-5" Maximum="5" IsSnapToTickEnabled="True" TickFrequency="1" Margin="5"/>
        <Grid Grid.Row="1" Grid.Column="2" MinWidth="35">
            <TextBlock Text="{Binding Octaves}" VerticalAlignment="Center" HorizontalAlignment="Right" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" ToolTip="ダブルクリックして編集"/>
            <TextBox Text="{Binding Octaves, UpdateSourceTrigger=Explicit}" Visibility="Collapsed" LostFocus="TextBox_LostFocus" KeyDown="TextBox_KeyDown" MinWidth="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="キャンセル" IsCancel="True" Style="{StaticResource RichButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" Style="{StaticResource RichButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>