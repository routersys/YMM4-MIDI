<Window x:Class="MIDI.UI.Views.MidiEditor.Modals.ExportProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.UI.ViewModels.MidiEditor.Modals"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ExportProgressViewModel}"
        Title="オーディオ書き出し中" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" BorderThickness="1" CornerRadius="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="オーディオファイルを書き出しています..." FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" FontWeight="SemiBold"/>
                <ProgressBar Value="{Binding Progress}" IsIndeterminate="{Binding IsIndeterminate}" Height="15" Margin="0,10,0,5"/>
                <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="完了しました。" FontSize="14" FontWeight="SemiBold" Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="閉じる" Command="{Binding CloseCommand}" Style="{StaticResource RichButtonStyle}" Margin="0,10,0,0"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>