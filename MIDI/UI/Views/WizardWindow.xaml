<Window x:Class="MIDI.UI.Views.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MIDI.UI.ViewModels"
        xmlns:local="clr-namespace:MIDI.UI.Views"
        xmlns:conv="clr-namespace:MIDI.UI.Views.MidiEditor.Converters"
        xmlns:midi="clr-namespace:MIDI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:WizardViewModel}"
        Title="MIDIプラグイン 初期設定ウィザード"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized"
        Topmost="True"
        ResizeMode="NoResize"
        Background="{x:Null}"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MidiEditor/Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:ColorToStringConverter x:Key="ColorToStringConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <conv:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
            <conv:NullToVisibilityConverterInverted x:Key="NullToVisibilityConverterInverted" />

            <ControlTemplate x:Key="ValidationErrorTemplate">
                <StackPanel>
                    <AdornedElementPlaceholder x:Name="placeholder"/>
                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </ControlTemplate>

            <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Note1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" SpeedRatio="2">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-20">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Note2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" SpeedRatio="2">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-20">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Note3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" SpeedRatio="2">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-20">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Style TargetType="TextBlock" x:Key="SettingNameStyle">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            </Style>

            <Style TargetType="TextBlock" x:Key="SettingDescriptionStyle">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,2,0,8"/>
                <Setter Property="Visibility" Value="{Binding Description, Converter={StaticResource NullToVisibilityConverterInverted}}"/>
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Padding" Value="5,0"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
                <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
            </Style>

            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
            </Style>

            <DataTemplate x:Key="BooleanTemplate">
                <StackPanel Margin="0,5,0,5">
                    <CheckBox IsChecked="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Content="{Binding Name}" Style="{StaticResource {x:Type CheckBox}}" ToolTip="{Binding Description}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="StringTemplate">
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SettingNameStyle}"/>
                    <TextBox Text="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource {x:Type TextBox}}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="IntTemplate">
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SettingNameStyle}"/>
                    <TextBox Text="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource {x:Type TextBox}}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="DoubleTemplate">
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SettingNameStyle}"/>
                    <TextBox Text="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource {x:Type TextBox}}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="ColorTemplate">
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SettingNameStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding Value, Converter={StaticResource ColorToStringConverter}, ValidatesOnDataErrors=True, UpdateSourceTrigger=LostFocus}" Style="{StaticResource {x:Type TextBox}}"/>
                        <Border Grid.Column="1" Width="28" Height="28" Margin="5,0,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1">
                            <Rectangle>
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding Value}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Border>
                    </Grid>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="EnumTemplate">
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource SettingNameStyle}"/>
                    <ComboBox ItemsSource="{Binding EnumValues}" SelectedItem="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource {x:Type ComboBox}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </DataTemplate>

            <local:WizardTemplateSelector x:Key="WizardTemplateSelector"
                BooleanTemplate="{StaticResource BooleanTemplate}"
                StringTemplate="{StaticResource StringTemplate}"
                IntTemplate="{StaticResource IntTemplate}"
                DoubleTemplate="{StaticResource DoubleTemplate}"
                ColorTemplate="{StaticResource ColorTemplate}"
                EnumTemplate="{StaticResource EnumTemplate}"/>

            <DataTemplate DataType="{x:Type vm:WizardSelectionPageViewModel}">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="セットアップモードの選択" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        <TextBlock Text="MIDIプラグインの設定を行います。ご希望のモードを選択してください。" FontSize="16" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Margin="0,0,0,40" HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Command="{Binding SelectEasyCommand}" Margin="20" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bd" Width="260" Height="300" CornerRadius="8" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" SnapsToDevicePixels="True">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.1"/>
                                            </Border.Effect>
                                            <StackPanel VerticalAlignment="Center" Margin="20">
                                                <Viewbox Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center">
                                                    <Path Data="{Binding Source={x:Static vm:Icons.Home}}" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Stretch="Uniform"/>
                                                </Viewbox>
                                                <TextBlock Text="かんたん設定" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                                <TextBlock Text="基本的な設定のみを行います。&#x0a;すぐに使い始めたい方におすすめです。" 
                                                           TextAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" FontSize="14" LineHeight="20"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                <Setter TargetName="Bd" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Command="{Binding SelectFullCommand}" Margin="20" Padding="0" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bd" Width="260" Height="300" CornerRadius="8" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" SnapsToDevicePixels="True">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.1"/>
                                            </Border.Effect>
                                            <StackPanel VerticalAlignment="Center" Margin="20">
                                                <Viewbox Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center">
                                                    <Path Data="{Binding Source={x:Static vm:Icons.Default}}" Fill="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Stretch="Uniform"/>
                                                </Viewbox>
                                                <TextBlock Text="詳細設定" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                                <TextBlock Text="すべての項目を詳細に設定します。&#x0a;こだわりたい方におすすめです。" 
                                                           TextAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" FontSize="14" LineHeight="20"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                <Setter TargetName="Bd" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WizardSettingsPageViewModel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" Padding="25" Margin="0,0,10,0" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox ItemsSource="{Binding Settings}"
                                     SelectedItem="{Binding SelectedSetting, Mode=TwoWay}"
                                     ItemTemplateSelector="{StaticResource WizardTemplateSelector}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     HorizontalContentAlignment="Stretch"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     KeyboardNavigation.TabNavigation="Cycle"
                                     Focusable="True"/>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Column="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" Padding="20" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                        <StackPanel>
                            <TextBlock Text="ヘルプ" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                            <ContentControl Content="{Binding SelectedSetting}">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                            <TextBlock Text="{Binding DetailedHelp}" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" LineHeight="20"/>
                                            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0" FontWeight="Bold" TextWrapping="Wrap" Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedSetting}" Value="{x:Null}">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <TextBlock Text="設定項目の選択" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                                                <TextBlock Text="左側のリストから設定項目を選択すると、ここに詳細な説明が表示されます。" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                <TextBlock Text="&#x0a;※ 設定を変更するとリアルタイムにプレビューに反映されます。" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </DataTemplate>

            <Style TargetType="ListBoxItem">
                <Setter Property="Padding" Value="15,12"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="true">
                                <Grid>
                                    <Border x:Name="SelectionIndicator" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Opacity="0"/>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="0.25"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="0.1"/>
                                </Trigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                        <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="0.35"/>
                                </MultiDataTrigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="WindowCloseButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                <Path Data="M0,0 L12,12 M12,0 L0,12" 
                                      Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" 
                                      StrokeThickness="1.5" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#22000000"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#44000000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#B3000000">
        <Border Margin="60"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" 
                CornerRadius="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid x:Name="LoadingGrid" Background="Transparent">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="MIDIプラグイン 設定ウィザード" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Path x:Name="Note1" Data="{Binding Source={x:Static vm:Icons.MIDI}}" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Width="40" Height="40" Margin="8" Stretch="Uniform">
                                <Path.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Path.RenderTransform>
                            </Path>
                            <Path x:Name="Note2" Data="{Binding Source={x:Static vm:Icons.MIDI}}" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Width="40" Height="40" Margin="8" Stretch="Uniform">
                                <Path.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Path.RenderTransform>
                            </Path>
                            <Path x:Name="Note3" Data="{Binding Source={x:Static vm:Icons.MIDI}}" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Width="40" Height="40" Margin="8" Stretch="Uniform">
                                <Path.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </StackPanel>
                        <TextBlock Text="設定を読み込み中..." FontSize="16" Margin="0,20,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="MainGrid" Margin="20" Visibility="Collapsed" Opacity="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Pages}" Margin="0,10,0,20" 
                                  Visibility="{Binding SelectedPage.ShowSidebar, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5,0">
                                    <Grid Width="24" Height="24">
                                        <Ellipse x:Name="CompletedEllipse" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Visibility="Collapsed"/>
                                        <Ellipse x:Name="CurrentEllipse" Stroke="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" StrokeThickness="2" Visibility="Collapsed"/>
                                        <Ellipse x:Name="PendingEllipse" Stroke="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" StrokeThickness="2" Visibility="Collapsed"/>
                                        <Path x:Name="CompletedCheck" Data="M4,10L9,15L20,4" Stroke="White" StrokeThickness="2" Stretch="Uniform" Margin="5" Visibility="Collapsed"/>
                                    </Grid>
                                    <TextBlock x:Name="CategoryText" Text="{Binding CategoryName}" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                    <Rectangle Width="20" Height="2" Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                        <Setter TargetName="CompletedEllipse" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="CompletedCheck" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="CategoryText" Property="Opacity" Value="0.6"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Current">
                                        <Setter TargetName="CurrentEllipse" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="CategoryText" Property="FontWeight" Value="Bold"/>
                                        <Setter TargetName="CategoryText" Property="Opacity" Value="1.0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                        <Setter TargetName="PendingEllipse" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="CategoryText" Property="Opacity" Value="0.4"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border Grid.Row="1" Grid.Column="0" 
                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" 
                            BorderThickness="0,0,1,0" 
                            Margin="0,0,20,0"
                            Visibility="{Binding SelectedPage.ShowSidebar, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListBox ItemsSource="{Binding Pages}"
                                 SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{Binding IconGeometry}" Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" Opacity="0.7"/>
                                        <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <ContentControl Grid.Row="1" Content="{Binding SelectedPage}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Grid.Column" Value="1"/>
                                <Setter Property="Grid.ColumnSpan" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage.ShowSidebar}" Value="False">
                                        <Setter Property="Grid.Column" Value="0"/>
                                        <Setter Property="Grid.ColumnSpan" Value="2"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>

                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,0">
                        <Button Content="キャンセル" Command="{Binding CancelCommand}" Style="{StaticResource RichButtonStyle}" HorizontalAlignment="Left" Padding="20,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                            <Button Margin="0,0,20,0" Width="40" Height="40"
                                    Command="{Binding TogglePlayCommand}"
                                    Visibility="{Binding IsSettingsPage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="プレビュー再生">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.4"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Margin="12" 
                                                  Visibility="{Binding DataContext.IsPlaying, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>
                                            <Path Data="M18,18H6V6H18V18Z" Fill="White" Stretch="Uniform" Margin="11" 
                                                  Visibility="{Binding DataContext.IsPlaying, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="20" CenterY="20"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="戻る" Command="{Binding PreviousCommand}" Style="{StaticResource RichButtonStyle}" Margin="0,0,10,0" IsEnabled="{Binding CanGoPrevious}" Padding="20,10"/>
                            <Button Content="次へ" Command="{Binding NextCommand}" Style="{StaticResource RichButtonStyle}" Margin="0,0,10,0" 
                                    Visibility="{Binding IsSettingsPage, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                    IsEnabled="{Binding CanGoNext}" Padding="20,10"/>
                            <Button Content="完了" Command="{Binding FinishCommand}" IsDefault="True" Style="{StaticResource RichButtonStyle}" Visibility="{Binding IsLastPage, Converter={StaticResource BooleanToVisibilityConverter}}" Padding="20,10"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Button Style="{StaticResource WindowCloseButtonStyle}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0,0,0,0"
                        Click="CloseButton_Click"
                        ToolTip="閉じる"/>
            </Grid>
        </Border>
    </Grid>
</Window>