<Window x:Class="MIDI.Voice.Views.CreateNewModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MIDI.Voice.ViewModels"
        xmlns:models="clr-namespace:MIDI.Voice.Models"
        xmlns:conv="clr-namespace:MIDI.Voice.Views.Converters"
        xmlns:midi="clr-namespace:MIDI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:CreateNewModelViewModel}"
        Title="{x:Static midi:Translate.CreateNewModelWindowTitle}"
        Width="400" 
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        ResizeMode="NoResize" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MIDI;component/UI/Views/MidiEditor/Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{x:Static midi:Translate.ModelNameLabel}" 
                   Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding ModelName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="{x:Static midi:Translate.ModelTypeLabel}" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <RadioButton Content="{x:Static midi:Translate.InternalSynthRadioButton}" GroupName="ModelType"
                         IsChecked="{Binding SelectedModelType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ModelType.InternalSynth}}" Margin="0,0,10,0"/>
            <RadioButton Content="{x:Static midi:Translate.SoundFontRadioButton}" GroupName="ModelType"
                         IsChecked="{Binding SelectedModelType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ModelType.SoundFont}}" Margin="0,0,10,0"/>
            <RadioButton Content="{x:Static midi:Translate.UtauModelName}" GroupName="ModelType"
                         IsChecked="{Binding SelectedModelType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ModelType.UTAU}}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{x:Static midi:Translate.CancelButton}" IsCancel="True" Style="{StaticResource RichButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="{x:Static midi:Translate.CreateButton}" IsDefault="True" Click="OkButton_Click" Style="{StaticResource RichButtonStyle}" IsEnabled="{Binding CanConfirm}"/>
        </StackPanel>
    </Grid>
</Window>