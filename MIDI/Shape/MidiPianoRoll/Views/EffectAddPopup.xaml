<UserControl x:Class="MIDI.Shape.MidiPianoRoll.Views.EffectAddPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIDI.Shape.MidiPianoRoll.Views"
             xmlns:effects="clr-namespace:MIDI.Shape.MidiPianoRoll.Effects"
             xmlns:converters="clr-namespace:MIDI.Shape.MidiPianoRoll.Views.Converters"
             mc:Ignorable="d" 
             MinWidth="300" MinHeight="200"
             Loaded="EffectAddPopup_Loaded">
    <UserControl.Resources>
        <converters:EffectDefaultPluginConverter x:Key="EffectDefaultPluginConverter" />
        <Path x:Key="IconExtension" Data="M20.5 11H19V7c0-1.1-.9-2-2-2h-4V3.5C13 2.12 11.88 1 10.5 1S8 2.12 8 3.5V5H4c-1.1 0-1.99.9-1.99 2v3.8H3.5c1.49 0 2.7 1.21 2.7 2.7s-1.21 2.7-2.7 2.7H2V20c0 1.1.9 2 2 2h3.8v-1.5c0-1.49 1.21-2.7 2.7-2.7s2.7 1.21 2.7 2.7V22H17c1.1 0 2-.9 2-2v-4h1.5c1.38 0 2.5-1.12 2.5-2.5S21.88 11 20.5 11" Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Stretch="Uniform" />

        <Style x:Key="FavoriteToggleStyle" TargetType="ToggleButton">
            <Setter Property="Content" Value="☆" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="★" />
                    <Setter Property="Foreground" Value="Gold" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1" />
        </Grid.RowDefinitions>

        <Thumb Grid.Column="0" Grid.Row="0" Cursor="SizeNWSE" DragDelta="ThumbTopLeft_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="1" Grid.Row="0" Cursor="SizeNS" DragDelta="ThumbTop_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="2" Grid.Row="0" Cursor="SizeNESW" DragDelta="ThumbTopRight_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="0" Grid.Row="1" Cursor="SizeWE" DragDelta="ThumbLeft_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="2" Grid.Row="1" Cursor="SizeWE" DragDelta="ThumbRight_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="0" Grid.Row="2" Cursor="SizeNESW" DragDelta="ThumbBottomLeft_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="1" Grid.Row="2" Cursor="SizeNS" DragDelta="ThumbBottom_DragDelta" Background="Transparent" />
        <Thumb Grid.Column="2" Grid.Row="2" Cursor="SizeNWSE" DragDelta="ThumbBottomRight_DragDelta" Background="Transparent" />

        <Border Grid.Column="1" Grid.Row="1" 
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="GroupColumn" Width="120" MinWidth="50" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" MinWidth="100" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" />
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Groups}"
                             SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                             BorderThickness="0"
                             Margin="5,0,5,5" />
                </Grid>

                <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" ResizeDirection="Columns" Background="Transparent" />

                <ListBox Grid.Column="2" Margin="5"
                         ItemsSource="{Binding FilteredPlugins}"
                         BorderThickness="0"
                         MouseDoubleClick="EffectListBox_MouseDoubleClick"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:EffectPluginViewModel}">
                            <DockPanel LastChildFill="True">
                                <ToggleButton DockPanel.Dock="Left" 
                                              IsChecked="{Binding IsFavorite, Mode=TwoWay}" 
                                              Style="{StaticResource FavoriteToggleStyle}" 
                                              Margin="0,0,5,0" />

                                <ContentControl DockPanel.Dock="Right"
                                                Content="{StaticResource IconExtension}"
                                                Width="12" Height="12"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding Converter={StaticResource EffectDefaultPluginConverter}}"
                                                ToolTip="外部プラグイン" />

                                <StackPanel Margin="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                    <TextBlock Text="{Binding GroupName}" FontSize="10" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>