<UserControl x:Class="MIDI.Shape.MidiPianoRoll.Controls.MidiColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIDI.Shape.MidiPianoRoll.Controls"
             xmlns:models="clr-namespace:MIDI.Shape.MidiPianoRoll.Models"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <UserControl.Resources>
        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding}"/>
                            </Border.Background>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="PeriodLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Margin" Value="10,0,2,0"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <Style x:Key="AnimationMenuButton" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.56"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical">

                <Grid Visibility="{Binding Value.Mode, Converter={StaticResource AnimationModeToVisibilityConverter}, ConverterParameter=Fixed}">
                    <Button x:Name="FixedColorButton" 
                            Style="{StaticResource ColorButtonStyle}" 
                            DataContext="{Binding Value.Value}"
                            Click="ColorButton_Click" />
                    <Popup x:Name="FixedColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=FixedColorButton}" Placement="Bottom">
                        <local:ColorPickerPopup Color="{Binding Value.Value, Mode=TwoWay}" />
                    </Popup>
                </Grid>

                <Grid Visibility="{Binding Value.Mode, Converter={StaticResource AnimationModeToVisibilityConverter}, ConverterParameter=Linear}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="StartColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.StartValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>Start</TextBlock>
                            <Popup x:Name="StartColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=StartColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.StartValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="EndColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.EndValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>End</TextBlock>
                            <Popup x:Name="EndColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=EndColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.EndValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Value.Mode, Converter={StaticResource AnimationModeToVisibilityConverter}, ConverterParameter=Repeat}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="RepeatStartColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.StartValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>Start</TextBlock>
                            <Popup x:Name="RepeatStartColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=RepeatStartColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.StartValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="RepeatEndColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.EndValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>End</TextBlock>
                            <Popup x:Name="RepeatEndColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=RepeatEndColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.EndValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="周期" Style="{StaticResource PeriodLabelStyle}" />
                            <TextBox Text="{Binding Value.RepeatPeriod, Mode=TwoWay, StringFormat=F2}" Width="40" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding Value.Mode, Converter={StaticResource AnimationModeToVisibilityConverter}, ConverterParameter=Random}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="RandomStartColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.StartValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>Min</TextBlock>
                            <Popup x:Name="RandomStartColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=RandomStartColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.StartValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Button x:Name="RandomEndColorButton" 
                                    Style="{StaticResource ColorButtonStyle}" 
                                    DataContext="{Binding Value.EndValue}"
                                    Click="ColorButton_Click" />
                            <TextBlock>Max</TextBlock>
                            <Popup x:Name="RandomEndColorPopup" StaysOpen="False" PlacementTarget="{Binding ElementName=RandomEndColorButton}" Placement="Bottom">
                                <local:ColorPickerPopup Color="{Binding Value.EndValue, Mode=TwoWay}" />
                            </Popup>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="周期" Style="{StaticResource PeriodLabelStyle}" />
                            <TextBox Text="{Binding Value.RandomPeriod, Mode=TwoWay, StringFormat=F2}" Width="40" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Grid>

        <Button x:Name="AnimationMenuButton" 
                Grid.Column="1" 
                Style="{StaticResource AnimationMenuButton}"
                PreviewMouseLeftButtonDown="AnimationMenuButton_PreviewMouseLeftButtonDown">
            <TextBlock Text="{Binding Value.Mode, Converter={StaticResource AnimationModeToContentConverter}}" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                       IsHitTestVisible="False"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0"/>
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="なし(N)" Click="MenuItem_Mode_Click" Tag="{x:Static models:AnimationMode.Fixed}"/>
                    <MenuItem Header="直線移動(L)" Click="MenuItem_Mode_Click" Tag="{x:Static models:AnimationMode.Linear}"/>
                    <MenuItem Header="ランダム(R)" Click="MenuItem_Mode_Click" Tag="{x:Static models:AnimationMode.Random}"/>
                    <MenuItem Header="反復(P)" Click="MenuItem_Mode_Click" Tag="{x:Static models:AnimationMode.Repeat}"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>

    </Grid>
</UserControl>