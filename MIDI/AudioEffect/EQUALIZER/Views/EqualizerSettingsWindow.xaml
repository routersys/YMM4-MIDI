<Window x:Class="MIDI.AudioEffect.EQUALIZER.Views.EqualizerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI.AudioEffect.EQUALIZER"
        xmlns:theme="clr-namespace:YukkuriMovieMaker.Theme;assembly=YukkuriMovieMaker.Plugin"
        xmlns:cv="clr-namespace:MIDI.AudioEffect.EQUALIZER.Converters"
        xmlns:vm="clr-namespace:MIDI.AudioEffect.EQUALIZER.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:EqualizerSettingsViewModel}"
        mc:Ignorable="d"
        Title="イコライザー設定" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    <Window.Resources>
        <cv:BooleanConverter x:Key="NotNullConverter" />
        <cv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cv:FavoriteToColorConverter x:Key="FavoriteToColorConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <TabControl Background="Transparent">
            <TabItem Header="基本設定">
                <StackPanel Margin="10">
                    <CheckBox IsChecked="{Binding HighQualityMode}" Content="高音質モードを有効にする" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
                        <CheckBox.ToolTip>
                            <ToolTip>
                                <TextBlock>
                                    オーバーサンプリングを使用して、音声の品質を向上させます。<LineBreak/>
                                    特に高周波数のフィルタリング精度が向上しますが、CPU負荷が増加します。
                                </TextBlock>
                            </ToolTip>
                        </CheckBox.ToolTip>
                    </CheckBox>
                    <TextBlock Text="（CPU負荷が増加します。）" FontSize="10" Margin="20,0,0,20" Opacity="0.7"/>

                    <TextBlock Text="デフォルトプリセット" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding AllPresetNames}"
                                  SelectedItem="{Binding SelectedDefaultPreset, Mode=TwoWay}"
                                  Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="クリア" Width="60"
                                Command="{Binding ClearDefaultPresetCommand}"
                                ToolTip="デフォルトプリセットの設定をクリアします"/>
                    </Grid>
                    <TextBlock Text="新しいイコライザーを追加した際に自動適用されるプリセットです。"
                              FontSize="10" Opacity="0.7" Margin="0,5,0,0"/>
                    <Button Content="設定を保存" Command="{Binding SaveSettingsCommand}" HorizontalAlignment="Left" Margin="0,20,0,0" Width="100"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="プリセット管理">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="プリセットグループ" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox Grid.Row="1" Name="GroupListBox" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroupItem}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="Border" Padding="{TemplateBinding Padding}" Background="Transparent" SnapsToDevicePixels="true">
                                                    <TextBlock Text="{Binding Name}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="true">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>

                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="プリセット一覧" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="インポート"
                                    Command="{Binding ImportCommand}" Margin="0,0,10,0"
                                    ToolTip="プリセットファイルをインポートします"/>
                            <Button Grid.Column="2" Content="エクスポート"
                                    Command="{Binding ExportCommand}"
                                    ToolTip="選択したプリセットをエクスポートします"/>
                        </Grid>

                        <Grid Grid.Row="1" Margin="0,10,0,0" AllowDrop="True">
                            <ListBox Name="PresetListBox" ItemsSource="{Binding Presets}" SelectedItem="{Binding SelectedPreset}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" 
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    Width="20" Height="20"
                                                    Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="お気に入りに追加/削除"
                                                    Margin="0,0,5,0">
                                                <Path Data="M12,17.27L18.18,21L17.27,14.41L22,9.82L15.77,8.89L12,3L8.23,8.89L2,9.82L6.73,14.41L5.82,21L12,17.27Z"
                                                      Fill="{Binding IsFavorite, Converter={StaticResource FavoriteToColorConverter}}"
                                                      Stretch="Uniform" 
                                                      Width="12" Height="12"/>
                                            </Button>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                       VerticalAlignment="Center" Margin="5,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Group}"
                                                       FontSize="10" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="名前変更"
                                    Command="{Binding RenameCommand}" Margin="0,0,10,0"/>
                            <Button Content="グループ変更"
                                    Command="{Binding ChangeGroupCommand}" Margin="0,0,10,0"/>
                            <Button Content="削除"
                                    Command="{Binding DeleteCommand}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>