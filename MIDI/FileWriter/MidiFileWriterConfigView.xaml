<UserControl x:Class="MIDI.FileWriter.MidiFileWriterConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MIDI.FileWriter"
             xmlns:vm="clr-namespace:MIDI.FileWriter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             xmlns:l="clr-namespace:MIDI"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MidiFileWriterConfigViewModel}"
             d:DesignHeight="450" d:DesignWidth="500"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
             Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MIDI;component/UI/Views/MidiEditor/Resources/MidiEditorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ObjectDataProvider MethodName="GetValues"
                                ObjectType="{x:Type sys:Enum}"
                                x:Key="QuantizeEnumValues">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="local:QuantizeDuration"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider MethodName="GetValues"
                                ObjectType="{x:Type sys:Enum}"
                                x:Key="PitchAlgorithmEnumValues">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="local:PitchDetectionAlgorithm"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,5,8"/>
                <Setter Property="FontWeight" Value="Normal"/>
            </Style>

            <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="5,0,0,8"/>
            </Style>

            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Padding" Value="5,0"/>
                <Setter Property="Margin" Value="5,0,0,8"/>
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Style>

            <Style x:Key="SliderStyle" TargetType="Slider" BasedOn="{StaticResource RichSliderStyle}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="5,0,0,8"/>
                <Setter Property="Height" Value="30"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="15">
            <GroupBox Header="{Binding Source={x:Static l:Translate.MidiWriterHeader}}" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="60"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterQuantizeLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterQuantizeTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                              ItemsSource="{Binding Source={StaticResource QuantizeEnumValues}}"
                              SelectedItem="{Binding QuantizeValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ToolTip="{Binding Source={x:Static l:Translate.MidiWriterQuantizeTooltip}}" 
                              Style="{StaticResource ComboBoxStyle}"/>

                    <Label Grid.Row="1" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterPitchAlgoLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterPitchAlgoTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                              ItemsSource="{Binding Source={StaticResource PitchAlgorithmEnumValues}}"
                              SelectedItem="{Binding PitchAlgorithm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ToolTip="{Binding Source={x:Static l:Translate.MidiWriterPitchAlgoTooltip}}" 
                              Style="{StaticResource ComboBoxStyle}"/>

                    <Label Grid.Row="2" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterPitchSensitivityLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterPitchSensitivityTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <Slider Grid.Row="2" Grid.Column="1" 
                            Minimum="0" Maximum="1" 
                            Value="{Binding PitchSensitivity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="False"
                            ToolTip="{Binding Source={x:Static l:Translate.MidiWriterPitchSensitivityTooltip}}" 
                            Style="{StaticResource SliderStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="2" 
                             Text="{Binding PitchSensitivity, StringFormat=F2, Mode=OneWay}" 
                             TextAlignment="Right" 
                             Style="{StaticResource TextBoxStyle}"/>

                    <Label Grid.Row="3" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterFftSizeLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterFftSizeTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                              SelectedItem="{Binding FftSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              ToolTip="{Binding Source={x:Static l:Translate.MidiWriterFftSizeTooltip}}" 
                              Style="{StaticResource ComboBoxStyle}">
                        <sys:Int32>1024</sys:Int32>
                        <sys:Int32>2048</sys:Int32>
                        <sys:Int32>4096</sys:Int32>
                        <sys:Int32>8192</sys:Int32>
                        <sys:Int32>16384</sys:Int32>
                    </ComboBox>

                    <Label Grid.Row="4" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterMinNoteDurationLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterMinNoteDurationTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <Slider Grid.Row="4" Grid.Column="1" 
                            Minimum="10" Maximum="500" 
                            Value="{Binding MinNoteDurationMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            TickFrequency="10"
                            IsSnapToTickEnabled="False"
                            ToolTip="{Binding Source={x:Static l:Translate.MidiWriterMinNoteDurationTooltip}}" 
                            Style="{StaticResource SliderStyle}"/>
                    <TextBox Grid.Row="4" Grid.Column="2" 
                             Text="{Binding MinNoteDurationMs, StringFormat=F0, Mode=OneWay}" 
                             TextAlignment="Right" 
                             Style="{StaticResource TextBoxStyle}"/>

                    <Label Grid.Row="5" Grid.Column="0" 
                           Content="{Binding Source={x:Static l:Translate.MidiWriterVelocitySensitivityLabel}}" 
                           ToolTip="{Binding Source={x:Static l:Translate.MidiWriterVelocitySensitivityTooltip}}" 
                           Style="{StaticResource LabelStyle}"/>
                    <Slider Grid.Row="5" Grid.Column="1" 
                            Minimum="0" Maximum="1" 
                            Value="{Binding VelocitySensitivity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="False"
                            ToolTip="{Binding Source={x:Static l:Translate.MidiWriterVelocitySensitivityTooltip}}" 
                            Style="{StaticResource SliderStyle}"/>
                    <TextBox Grid.Row="5" Grid.Column="2" 
                             Text="{Binding VelocitySensitivity, StringFormat=F2, Mode=OneWay}" 
                             TextAlignment="Right" 
                             Style="{StaticResource TextBoxStyle}"/>

                </Grid>
            </GroupBox>

            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" 
                    BorderThickness="1" 
                    CornerRadius="3" 
                    Padding="10" 
                    Margin="0,15,0,0"
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <StackPanel>
                    <TextBlock Text="{Binding Source={x:Static l:Translate.MidiWriterNotesHeader}}" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Source={x:Static l:Translate.MidiWriterNote1}}" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,3"/>
                    <TextBlock Text="{Binding Source={x:Static l:Translate.MidiWriterNote2}}" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,3"/>
                    <TextBlock Text="{Binding Source={x:Static l:Translate.MidiWriterNote3}}" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>