<Window x:Class="MIDI.SoundFontRuleEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:SoundFontRuleEditorViewModel}"
        Title="SoundFont ルール編集" Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Window.Resources>
        <local:IntListToStringConverter x:Key="IntListConverter" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding SoundFontFile, StringFormat='ルール編集: {0}'}" FontWeight="Bold" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="再生時間 (秒)" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Rule.MinDurationSeconds, TargetNullValue=''}" Margin="5" ToolTip="最小時間"/>
            <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Rule.MaxDurationSeconds, TargetNullValue=''}" Margin="5" ToolTip="最大時間"/>

            <Label Grid.Row="1" Grid.Column="0" Content="トラック数" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Rule.MinTrackCount, TargetNullValue=''}" Margin="5" ToolTip="最小トラック数"/>
            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Rule.MaxTrackCount, TargetNullValue=''}" Margin="5" ToolTip="最大トラック数"/>

            <Label Grid.Row="2" Grid.Column="0" Content="必須プログラム" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Rule.RequiredPrograms, Converter={StaticResource IntListConverter}}" Margin="5" ToolTip="カンマ区切りで入力"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="削除" Command="{Binding DeleteCommand}" Background="DarkRed" Foreground="White" Margin="0,0,20,0" Padding="10,5"/>
            <Button Content="キャンセル" Command="{Binding CancelCommand}" IsCancel="True" Margin="5" Padding="10,5"/>
            <Button Content="保存" Command="{Binding SaveCommand}" IsDefault="True" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>