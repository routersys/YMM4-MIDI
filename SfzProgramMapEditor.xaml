<Window x:Class="MIDI.SfzProgramMapEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:SfzProgramMapEditorViewModel}"
        Title="SFZ プログラム編集" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding FilePath, StringFormat='SFZファイル: {0}'}" FontWeight="Bold" Margin="0,0,0,15" TextWrapping="Wrap"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="プログラム番号" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Map.Program}" Margin="5"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="削除" Command="{Binding DeleteCommand}" Background="DarkRed" Foreground="White" Margin="0,0,20,0" Padding="10,5"/>
            <Button Content="キャンセル" Command="{Binding CancelCommand}" IsCancel="True" Margin="5" Padding="10,5"/>
            <Button Content="保存" Command="{Binding SaveCommand}" IsDefault="True" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>